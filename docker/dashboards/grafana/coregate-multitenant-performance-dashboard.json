{
  "id": null,
  "title": "CoreGate Multi-Tenant Performance â€” Gateway / Stand-In",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "timezone": "browser",
  "templating": {
    "list": [
      {
        "name": "tenant",
        "type": "query",
        "label": "Tenant",
        "query": "label_values(coregate_tps_rate, tenant)",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "includeAll": false,
        "multi": false
      },
      {
        "name": "type",
        "type": "query",
        "label": "Transaction Type",
        "query": "label_values(coregate_tps_rate, type)",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "includeAll": true,
        "multi": false
      },
      {
        "name": "mode",
        "type": "query",
        "label": "Operational Mode",
        "query": "label_values(coregate_tps_rate, mode)",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "includeAll": true,
        "multi": false
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "Operational Mode",
      "id": 1,
      "targets": [
        {
          "expr": "max(coregate_operational_mode_state)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": { "text": "GATEWAY", "color": "green" },
                "1": { "text": "STAND-IN AUTO", "color": "orange" },
                "2": { "text": "STAND-IN REQUESTED", "color": "red" }
              }
            }
          ]
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "orientation": "horizontal"
      },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "TPS (Transactions Per Second)",
      "id": 2,
      "targets": [
        {
          "expr": "coregate_tps_rate{tenant=\"$tenant\", type=\"$type\", mode=~\"$mode\"}",
          "legendFormat": "{{tenant}} | {{type}} | {{mode}}",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "tps",
          "color": { "mode": "palette-classic" },
          "custom": { "fillOpacity": 40, "lineInterpolation": "smooth" }
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 6, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "Average Latency (ms)",
      "id": 3,
      "targets": [
        {
          "expr": "coregate_latency_avg_ms{tenant=\"$tenant\", type=\"$type\", mode=~\"$mode\"}",
          "legendFormat": "{{tenant}} | {{type}} | {{mode}}",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "orange", "value": 100 },
              { "color": "red", "value": 300 }
            ]
          },
          "custom": { "lineInterpolation": "smooth" }
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 }
    },
    {
      "type": "timeseries",
      "title": "Success Rate (%)",
      "id": 4,
      "targets": [
        {
          "expr": "coregate_success_rate{tenant=\"$tenant\", type=\"$type\", mode=~\"$mode\"}",
          "legendFormat": "{{tenant}} | {{type}} | {{mode}}",
          "refId": "D"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "orange", "value": 80 },
              { "color": "green", "value": 95 }
            ]
          }
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 }
    },
    {
      "type": "timeseries",
      "title": "Timeouts & Errors",
      "id": 5,
      "targets": [
        {
          "expr": "increase(coregate_timeout_count_total{tenant=\"$tenant\", type=\"$type\"}[5m])",
          "legendFormat": "Timeouts - {{tenant}}/{{type}}",
          "refId": "E"
        },
        {
          "expr": "increase(coregate_error_count_total{tenant=\"$tenant\", type=\"$type\"}[5m])",
          "legendFormat": "Errors - {{tenant}}/{{type}}",
          "refId": "F"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": { "mode": "palette-classic" }
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 }
    },
    {
      "type": "timeseries",
      "title": "Operational Mode Timeline",
      "id": 6,
      "targets": [
        {
          "expr": "coregate_operational_mode_state",
          "legendFormat": "System Mode",
          "refId": "G"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "continuous-GrYlRd" },
          "custom": { "lineInterpolation": "stepAfter", "fillOpacity": 40 }
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 }
    }
  ],
  "time": { "from": "now-30m", "to": "now" },
  "annotations": { "list": [] }
}


